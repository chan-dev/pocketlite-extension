{
  "name": "Ng extension",
  "version": "1.0",
  "description": "Build an extension with Angular",
  "manifest_version": 2,
  "icons": {
    "16": "./assets/icon-16.png",
    "32": "./assets/icon-48.png",
    "48": "./assets/icon-48.png",
    "128": "./assets/icon-128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "webNavigation",
    "cookies",
    "*://pocketlite-app.herokuapp.com/*",
    "http://localhost:3000/*"
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Pocketlite"
  },
  "background": {
    "scripts": ["background.js", "runtime.js"],
    "persistent": false
  }
}
